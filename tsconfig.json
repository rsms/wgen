{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,

    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "newLine": "LF",
    "target": "es2018",
    "sourceMap": true,
    "lib": [
      // "dom",
      "es2018"
    ],
    "baseUrl": "src",
    "outDir": "dist"
  },
  "include": [
    "src/global.d.ts",
    "src/main.ts"
  ]
}
